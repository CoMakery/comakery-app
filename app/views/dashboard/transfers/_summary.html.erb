<% transfers_totals = transfers_totals_data(@transfers_totals) %>
<div class="transfers-table__transfer transfers-table__transfer--summary">
  <label>summary</label>

  <div class="transfers-table__transfer__name">
    <label>total</label>

    <%= pluralize(transfers_totals[:total_transfers], 'transfer', 'transfers') %>
  </div>

  <div class="transfers-table__transfer__account">
    <label>accounts</label>

    <%= pluralize(transfers_totals[:total_accounts], 'account', 'accounts') %>
  </div>

  <div class="transfers-table__transfer__issuer">
    <label>admins</label>

    <%= pluralize(transfers_totals[:total_admins], 'admin', 'admins') %>
  </div>

  <div class="transfers-table__transfer__total_amount">
    <label>total amount</label>

    <%= transfers_totals[:total_amount] %>
  </div>

  <div class="transfers-table__transfer__verification">
  </div>

  <div class="transfers-table__transfer__status">
  </div>

  <div class="transfers-table__transfer__history">
  </div>

  <div class="transfers-table__transfer__transferred_at">
  </div>

  <% if @project.token&._token_type_token_release_schedule? %>
    <div class="transfers-table__transfer__lockup_schedule_id">
      <label>schedule id</label>
    </div>

    <div class="transfers-table__transfer__commencement_date">
      <label>commencement date</label>
    </div>
  <% end %>

  <% if policy(@project).update_transfer? %>
    <div class="transfers-table__transfer__settings">
    </div>
  <% end %>
</div>
