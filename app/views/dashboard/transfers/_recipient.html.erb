<%= turbo_frame_tag "transfer_recipient_#{transfer.id}", target: "_top" do %>
  <% account = transfer.account.decorate %>

  <div class="account-preview">
    <div class="account-preview__image">
      <%= image_tag account_image_url(account, 100) %>
    </div>

    <div class="account-preview__info">
      <div class="account-preview__info__nickname">
        <%= account.nickname %>
      </div>

      <div class="account-preview__info__name">
        <%= account.name %>
      </div>

      <% if transfer.recipient_wallet_address.present? %>
        <div class="account-preview__info__wallet">
          <%= link_to(transfer.recipient_wallet_address, transfer.recipient_wallet_url, target: '_blank') %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
